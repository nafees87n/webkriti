<!DOCTYPE html>
<html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="favicon-16x16.png">
    <link rel="manifest" href="site.webmanifest">
    <title><%=user%></title>
    <link rel="stylesheet" href="dashboard.css">
</head>

<body>
    <div class="container">
        <header>
            <img src="cric3removed2.png" alt="logo" class="logo" height="10px">
            <div id="oldnav">
                <nav>
                    <ul>
                        <li><a href="">DASHBOARD</a></li>
                        <li><a href="">FIXTURES</a></li>
                        <li><a href="">MY BOOKINGS</a></li>
                        <li><a href="">FAQS</a></li>
                        <li><a href="/logout">Signout</a></li>
                    </ul>
                </nav>
            </div>

            <div id="newnav">
                <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                    <div class="hamburger" onclick="myFunction()">
                        <div id="line1"></div>
                        <div id="line2"></div>
                        <div id="line3"></div>
                    </div>
                </a>
            </div>
        </header>
        <div id="main">
            <div class="topnavtoggle topnav">
                <nav>
                    <p><a class="ham" href="/">DASHBOARD</a></p><br>
                    <p><a class="ham" href="">FIXTURES</a></p><br>
                    <p><a class="ham" href="">MY BOOKINGS</a></p><br>
                    <p><a class="ham" href="">FAQS</a></p><br>
                    <p><a class="ham" href="">SIGNOUT</a></p><br>
                </nav>

                <!-- <li><a href="">PROFILE</a></li> -->
            </div>
        </div>
        <div id="mainold">
            <div id="schedule">
                <div id="content">
                    <h1 style="text-align: center;"><%=msg%></h1>
                    <table>
                        <% for(var i=0;i<3 ; i++){ %>
                        <tr>
                            <td><%= match[i].team1 %></td>
                            <td>Vs</td>
                            <td><%= match[i].team2 %></td>
                            <td><%= match[i].dom.toDateString() %></td>
                            <td>
                                <form action="/dashboard/book" method="POST">
                                    <button type="submit" name="id" value="<%= match[i].id %>">BOOK</button>
                                </form>
                            </td>
                        </tr>
                        <!-- <tr><hr></tr> -->
                        <% } %>
                    </table>
                </div>
            </div>
        </div>

        <script>
            var x = document.querySelector(".topnavtoggle");
            var flag = false;
            document.querySelector("#newnav").addEventListener("click", function () {
                if (!flag) {
                    x.classList.remove("topnavtoggle");
                    x.classList.add("topnavnaf");
                    flag = true;
                } else {
                    x.classList.add("topnavtoggle");
                    x.classList.remove("topnavnaf");
                    flag = false;
                }

            });
        </script>
</body>

</html>